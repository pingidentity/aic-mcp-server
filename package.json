{
  "name": "@ping-identity/aic-mcp-server",
  "version": "0.1.0-alpha.1",
  "main": "dist/index.js",
  "bin": {
    "aic-mcp-server": "dist/index.js"
  },
  "license": "Apache-2.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pingidentity/aic-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/pingidentity/aic-mcp-server/issues"
  },
  "homepage": "https://github.com/pingidentity/aic-mcp-server#readme",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "build": "rm -rf dist && tsc",
    "postbuild": "shx chmod +x dist/*.js",
    "dev": "tsc -w",
    "dev:inspect": "npx @modelcontextprotocol/inspector -e AIC_BASE_URL=${AIC_BASE_URL} tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "inspect": "npx @modelcontextprotocol/inspector -e AIC_BASE_URL=${AIC_BASE_URL} node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:snapshots:update": "UPDATE_SNAPSHOTS=true vitest run",
    "docker:build": "docker build -t pingone-aic-mcp:latest .",
    "docker:run": "docker run --rm -i -e AIC_BASE_URL=${AIC_BASE_URL} pingone-aic-mcp:latest"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.2",
    "keytar": "^7.9.0",
    "open": "^10.1.0",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/open": "^6.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "memfs": "^4.51.1",
    "msw": "^2.12.4",
    "shx": "^0.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.0.4",
    "vitest": "^4.0.15"
  }
}
